<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PlanAlimenticio" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Otros atributos del tema -->
    </style>

    <style name="CustomDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/to_center</item>
        <item name="android:windowExitAnimation">@anim/from_center</item>
    </style>
    
    <style name="Button_dialog" parent="TextAppearance.AppCompat.Widget.Button">
        <item name="android:radius">@dimen/radius_generic</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/size_text_button</item>
        <item name="android:layout_gravity">center</item>
    </style>

</resources>