<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="item"
            type="com.liftechnology.planalimenticio.data.local.ModelCardList" />

        <variable
            name="clickListener"
            type="com.liftechnology.planalimenticio.ui.adapters.FoodClickedListener"/>
    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_recycler_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        android:elevation="10dp"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        android:onClick="@{()->clickListener.onClick(item)}">

        <LinearLayout
            android:id="@+id/linear_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/gr_bg_category"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/text_letter"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/size_title_card"
                android:layout_weight="10"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/margin_16dp"
                tools:text="@{item.alimento}"/>

            <LinearLayout
                android:id="@+id/linear_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:layout_gravity="end"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/text_quantity"
                        android:textSize="@dimen/size_text_card"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/padding_8dp"
                        android:layout_marginEnd="@dimen/margin_4dp"
                        tools:text="@{String.valueOf(item.cantidad_sugerida)}"/>
                    <TextView
                        android:id="@+id/text_unit"
                        android:textSize="@dimen/size_text_card"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/padding_8dp"
                        tools:text="@{item.unidad}"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/text_weight"
                        android:textSize="@dimen/size_text_card"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingVertical="@dimen/padding_8dp"
                        tools:text="@{item.peso_neto_g+ ` g`}"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>
